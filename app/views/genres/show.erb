<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title><%= @genre.name %></title>
    </head>
    <body>
        <h1><%= @genre.name %></h1>
        <h1>Songs: </h1>
        <ol>
            <% @songs.each do |song| %>
                <li><a href="/songs/<%=song.slug %>"><%= song.name %></a></li>
            <% end %>
        </ol>
        <h1>Artists: </h1>
        <ol>
            <% @artists.each do |artist| %>
                <li><a href="/artists/<%=artist.slug %>"><%= artist.name %></a></li>
            <% end %>
        </ol>

    </body>
</html>
