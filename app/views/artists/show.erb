<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title><%= @artist.name %></title>
    </head>
    <body>
        <h1><%= @artist.name %></h1>
        <h1>Songs: </h1>
        <ol>
            <% @songs.each do |song| %>
                <li><a href="/songs/<%=song.slug %>"><%= song.name %></a></li>
            <% end %>
        </ol>
        <h1>Genres: </h1>
        <ol>
            <% @genres.each do |genre| %>
                <li><a href="/genres/<%=genre.slug %>"><%= genre.name %></a></li>
            <% end %>
        </ol>
    </body>
</html>
